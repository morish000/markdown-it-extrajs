{
  "name": "@morish000/markdown-it-extrajs",
  "version": "0.0.23",
  "tasks": {
    "sample": "deno run --allow-all sample.ts",
    "build": "deno run --allow-all build.ts"
  },
  "importMap": "import_map.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "deno.ns"
    ]
  },
  "exports": {
    ".": "./src/index.ts",
    "./scripts": "./src/scripts.ts",
    "./create-tags": "./src/create-tags.ts",
    "./block-tag-plugin": "./src/block-tag-plugin.ts",
    "./inline-tag-plugin": "./src/inline-tag-plugin.ts",
    "./void-tag-plugin": "./src/void-tag-plugin.ts"
  },
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "deno.json",
      "import_map.json",
      "src/*.ts"
    ]
  },
  "lint": {
    "include": [
      "./*.ts",
      "./*.mjs",
      "./*.json",
      "src/**/*.ts"
    ]
  },
  "fmt": {
    "include": [
      "./*.ts",
      "./*.mjs",
      "./*.md",
      "./*.json",
      "src/**/*.ts"
    ]
  }
}
